# Django environment example
DJANGO_SECRET_KEY=change-me
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:5173

# NLLB model settings
# First time loading 'facebook/nllb-200-distilled-600M' may download ~1GB and take minutes.
# To avoid downloads or on restricted networks, set NLLB_LOCAL_PATH to a local folder
# that contains the model files (config.json, tokenizer.json, pytorch_model.bin, etc.).
NLLB_MODEL_NAME=facebook/nllb-200-distilled-600M
# Example (Windows): NLLB_LOCAL_PATH=C:\models\nllb-200-distilled-600M
# Example (Linux/Mac): NLLB_LOCAL_PATH=/opt/models/nllb-200-distilled-600M
NLLB_LOCAL_PATH=

API_KEY=dev-api-key-123
